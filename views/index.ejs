        <div>
            <nav>
                <ul class="list-menu">
                    <a class="tab-main" href="/">Main</a>
                    <a class="tab-work" href="/work">Work</a>
                    <a class="tab-chores" href="/chores">Chores</a>
                </ul>
            </nav>
        </div>

        <div class="<%= listTitle %>">
            <div class ="todays-date"> <h2> <%= date %> </h2> </div>
            <% let n=0 %>
            <% toDoItems.forEach(item=> { %>
                <div class="list-items">
                    <form action="/check" method="post">
                        <input onChange="this.form.submit()" type="checkbox" name="doThis" id="<%= item %>" value="<%= item %>" <%= checkStatus[n] %> >
                        <label for="<%= item %>">
                            <%= item %>
                        </label>
                        <input type="hidden" name="toDoIndex" value="<%= n %>">
                        <input type="hidden" name="toDoList" value="<%= listTitle %>">
                    </form>
                    <hr>
                </div>
                <% n++ %>
                <% }); %>

                    <div class="new-item-form">
                        <form action="/" method="post">
                            <input type="text" placeholder="Today I would like to..." name="toDoItem" required autofocus>
                            <button type="submit" name="list" value="<%= listTitle %>">Add Item</button>
                        </form>
                    </div>

        </div>
